---
interface Props {
    href: string;
    title: string;
    body: string;
}
const { href, title, body } = Astro.props;
---

<li class="card">
    <a href={href} class="card-link">
        <h2>{title}</h2>
        <p>{body}</p>
    </a>
</li>

<style>
    .card {
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 16px;
        transition: background-color 0.3s;
    }
    .card:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }
    .card-link {
        text-decoration: none;
        color: inherit;
    }
</style>
